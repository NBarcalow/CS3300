<p id="notice"><%= notice %></p>

<h1>Portfolio Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_projects.each do |portfolio_project| %>
      <tr>
        <td><%= portfolio_project.title %></td>
        <td><%= portfolio_project.description %></td>
        <td><%= portfolio_project.slug %></td>
        <td><%= link_to 'Show', portfolio_project %></td>
        <td><%= link_to 'Edit', edit_portfolio_project_path(portfolio_project) %></td>
        <td><%= link_to 'Destroy', portfolio_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

